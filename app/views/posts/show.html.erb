<% @title = @post.title %>
<div class="well post-simple">
	<h2 class="page-header"><%= @post.title %></h2>
	<small>Posted by <%= @user.name %> on <%= @post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
	<p>
		<%= image_tag @post.image.url,width: '100%' %>
		<p>
		<%= raw @post.body %>
		</p>
	</p>
</div>

<%= render 'partials/comments'%>